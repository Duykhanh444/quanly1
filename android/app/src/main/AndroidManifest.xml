        </activity>

        <!-- âœ… Flutter embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- âœ… Cho phÃ©p truy váº¥n cÃ¡c á»©ng dá»¥ng khÃ¡c -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
